<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<targets>
		<!-- Normal console for everything -->
		<target xsi:type="Console" name="console" layout="${longdate} ${level:uppercase=true} ${logger} ${message}" />
	</targets>

	<rules>
		<!-- Microsoft logs -->
		<logger name="Microsoft.*" minlevel="Info" writeTo="console" />
		<logger name="System.*" minlevel="Info" writeTo="console" />

		<!-- Your app logs -->
		<logger name="*" minlevel="Info" writeTo="console" />
	</rules>

</nlog>
